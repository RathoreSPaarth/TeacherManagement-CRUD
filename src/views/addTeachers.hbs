<div class="container">
  <h1>Teacher form</h1>
  <form id="teacher-form" action="/teachers" method='POST'>
    <br />
    <label for="fname">First name:</label>
    <input type="text" id="fname" name="firstName" placeholder="First Name" required />
    <br />
    <label for="lname">Last name:</label>
    <input type="text" id="lname" name="lastName" placeholder="Last Name" />
    <br />
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" placeholder="Enter Teacher Email" required />

    <br />
    <label for="Teacher-age">Age:</label>
    <input type="number" id="Teacher-age" name="age" placeholder="Age in years" required min="26" />
    <br />
    <label for="class">Class:</label>
    <input type="number" id="class" name="class" placeholder="Enter Teacher class" required />
    <br />
    <input class="btn btn-primary" type="submit" value="Add Teacher" method="POST" action="/teachers"
      onclick="validateForm()" />
  </form>
</div>

<script>
  function validateForm() {
    let fname = document.getElementById('fname')
    if (fname.value == "") {
      alert('First Name field cannot be empty')
    }

    let age = document.getElementById('Teacher-age')
    if (age.value < 25) {
      alert('Age must be greater than 25')
    }
  }
</script>